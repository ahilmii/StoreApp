<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />

</head>
<body>
    <header>
        Store App : Header
        <partial name="_Navbar" /> <!-- buradaki name alanı eklemek istediğmiz dosya ile eşleşmeli. bu yapı sayesinde birçok sayfada kullanacağım bir içeriği tek seferde   --> 
        @RenderSection(name: "Header", required: false) <!-- bu yapı sayesinde içeriği özelleştirebiliyorum -->
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>


    <footer>
        @RenderSection("Footer", false)
        Footer
    </footer>

    <script src="~/lib/jquery/jquery.min.css"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", false) <!-- Eğer section Header tanımlanmamışsa, hata oluşmaz ve bu alan boş bırakılır. (false sayesinde) -->
 

</body>
</html>